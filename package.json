{
  "name": "dream-dashboard",
  "description": "Dream Dashboard is a terminal dashboard for monitoring your Unifi gateway.",
  "version": "1990.1.3",
  "private": false,
  "homepage": "https://github.com/Leask/Dream-Dashboard#readme",
  "main": "dashboard.mjs",
  "bin": {
    "dashboard": "dashboard.mjs"
  },
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "start": "node --no-deprecation dashboard.mjs",
    "debug": "node --inspect --trace-warnings dashboard.mjs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ncuinit": "npm install -g npm-check-updates",
    "updep": "npx npm-check-updates -u && npm install && ( git commit -am 'update dependencies' || true )",
    "gitsync": "git pull && git push",
    "prepublishOnly": "npm version patch && npm run updep && npm run gitsync"
  },
  "author": "Leask Wong <i@leaskh.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Leask/Dream-Dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/Leask/Dream-Dashboard/issues"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "undici": "^7.16.0",
    "utilitas": "^1999.1.90"
  }
}
